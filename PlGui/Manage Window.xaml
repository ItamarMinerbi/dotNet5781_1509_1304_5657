<Window x:Class="PlGui.ManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        MinHeight="700" MinWidth="1400"
        Title="Manager Window" Height="700" Width="1400">
    <Window.Resources>
        <Style x:Key="gridHover" TargetType="{x:Type Grid}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.86"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="closeHover" TargetType="{x:Type Viewbox}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="20,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="40"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Margin" Value="15,5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="#FF3581BF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="grdShowMenu" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
              Cursor="Hand" MouseLeftButtonDown="grdShowMenu_MouseLeftButtonDown" Width="30" Height="30" Margin="10">
            <Viewbox Width="30" Height="30">
                <Canvas Width="24" Height="24">
                    <Path Fill="Black" Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,10.5A1.5,1.5 0 0,1 13.5,12A1.5,1.5 0 0,1 12,13.5A1.5,1.5 0 0,1 10.5,12A1.5,1.5 0 0,1 12,10.5M7.5,10.5A1.5,1.5 0 0,1 9,12A1.5,1.5 0 0,1 7.5,13.5A1.5,1.5 0 0,1 6,12A1.5,1.5 0 0,1 7.5,10.5M16.5,10.5A1.5,1.5 0 0,1 18,12A1.5,1.5 0 0,1 16.5,13.5A1.5,1.5 0 0,1 15,12A1.5,1.5 0 0,1 16.5,10.5Z" />
                </Canvas>
            </Viewbox>
        </Grid>
        <Grid x:Name="grdMenu" Grid.Column="0" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Image Source="images/manager pic.png" x:Name="imgProfile" Width="80" Height="80" Margin="60,0,60,10"/>
                <TextBlock x:Name="lblName" Text="Name" Foreground="WhiteSmoke" FontSize="17"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </Grid>
            <Grid Grid.Row="1" Style="{StaticResource gridHover}" ToolTip="Display buses"
                  MouseLeftButtonDown="busesGrid_MouseLeftButtonDown">
                <Label x:Name="lblBuses" Foreground="White" FontSize="30" FontWeight="UltraBold" Content="Buses"
                       HorizontalAlignment="Right" VerticalAlignment="Center" Padding="40,10"/>
                <Viewbox Width="50" Height="50" Margin="20, 10" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Path x:Name="icoBuses" Fill="White" Data="M18,11H6V6H18M16.5,17A1.5,1.5 0 0,1 15,15.5A1.5,1.5 0 0,1 16.5,14A1.5,1.5 0 0,1 18,15.5A1.5,1.5 0 0,1 16.5,17M7.5,17A1.5,1.5 0 0,1 6,15.5A1.5,1.5 0 0,1 7.5,14A1.5,1.5 0 0,1 9,15.5A1.5,1.5 0 0,1 7.5,17M4,16C4,16.88 4.39,17.67 5,18.22V20A1,1 0 0,0 6,21H7A1,1 0 0,0 8,20V19H16V20A1,1 0 0,0 17,21H18A1,1 0 0,0 19,20V18.22C19.61,17.67 20,16.88 20,16V6C20,2.5 16.42,2 12,2C7.58,2 4,2.5 4,6V16Z" />
                    </Canvas>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="2" Style="{StaticResource gridHover}" ToolTip="Display lines"
                  MouseLeftButtonDown="linesGrid_MouseLeftButtonDown">
                <Label x:Name="lblLines" Foreground="White" FontSize="30" FontWeight="UltraBold" Content="Lines"
                       HorizontalAlignment="Right" VerticalAlignment="Center" Padding="45,10"/>
                <Viewbox Width="50" Height="50" Margin="20, 10" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Path x:Name="icoLines" Fill="White" Data="M10 5C5.58 5 2 5.5 2 9V19C2 19.85 2.37 20.66 3 21.22V23C3 23.55 3.45 24 4 24H5C5.55 24 6 23.55 6 23V22H14V23C14 23.55 14.45 24 15 24H16C16.55 24 17 23.55 17 23V21.22C17.63 20.66 18 19.85 18 19V9C18 5.5 14.42 5 10 5M5.5 20C4.67 20 4 19.33 4 18.5S4.67 17 5.5 17 7 17.67 7 18.5 6.33 20 5.5 20M14.5 20C13.67 20 13 19.33 13 18.5S13.67 17 14.5 17 16 17.67 16 18.5 15.33 20 14.5 20M16 14H4V9H16V14M22 5V15C22 15.85 21.63 16.66 21 17.22V19C21 19.55 20.55 20 20 20H19.88C19.95 19.68 20 19.35 20 19V9C20 3 13 3 10 3C9.09 3 7.8 3 6.46 3.17C7.55 1.32 10.5 1 14 1C18.42 1 22 1.5 22 5Z" />
                    </Canvas>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="3" Style="{StaticResource gridHover}" ToolTip="Display stations"
                  MouseLeftButtonDown="busStationsGrid_MouseLeftButtonDown">
                <Label x:Name="lblStations" Foreground="White" FontSize="30" FontWeight="UltraBold" Content="Stations"
                       HorizontalAlignment="Right" VerticalAlignment="Center" Padding="15,10"/>
                <Viewbox Width="50" Height="50" Margin="10, 10" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Path x:Name="icoStations" Fill="White" Data="M22 7V16C22 16.71 21.62 17.36 21 17.72V19.25C21 19.66 20.66 20 20.25 20H19.75C19.34 20 19 19.66 19 19.25V18H12V19.25C12 19.66 11.66 20 11.25 20H10.75C10.34 20 10 19.66 10 19.25V17.72C9.39 17.36 9 16.71 9 16V7C9 4 12 4 15.5 4S22 4 22 7M13 15C13 14.45 12.55 14 12 14S11 14.45 11 15 11.45 16 12 16 13 15.55 13 15M20 15C20 14.45 19.55 14 19 14S18 14.45 18 15 18.45 16 19 16 20 15.55 20 15M20 7H11V11H20V7M7 9.5C6.97 8.12 5.83 7 4.45 7.05C3.07 7.08 1.97 8.22 2 9.6C2.03 10.77 2.86 11.77 4 12V20H5V12C6.18 11.76 7 10.71 7 9.5Z" />
                    </Canvas>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="4" Style="{StaticResource gridHover}" ToolTip="Display adjacent stations"
                  MouseLeftButtonDown="adjacentStationsGrid_MouseLeftButtonDown">
                <Label x:Name="lblAdjStations" Foreground="White" FontSize="30" FontWeight="UltraBold"
                       HorizontalAlignment="Right" VerticalAlignment="Center" Padding="15,10" >
                    <Label.Content>
                        <AccessText TextWrapping="WrapWithOverflow" Text="Adjacent Stations" />
                    </Label.Content>
                </Label>
                <Viewbox Width="50" Height="50" Margin="5, 10" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Path x:Name="icoAdjStations" Fill="White" Data="M16.5,4V8.25L19.36,9.94L18.61,11.16L15,9V4H16.5M16,13C17.36,13 18.54,12.5 19.5,11.53C20.5,10.56 21,9.39 21,8C21,6.64 20.5,5.46 19.5,4.5C18.54,3.5 17.36,3 16,3C14.61,3 13.44,3.5 12.47,4.5C11.5,5.46 11,6.64 11,8C11,9.39 11.5,10.56 12.47,11.53C13.44,12.5 14.61,13 16,13M13.5,19C13.94,19 14.3,18.84 14.58,18.54C14.86,18.24 15,17.89 15,17.5C15,17.08 14.86,16.73 14.58,16.43C14.3,16.13 13.94,16 13.5,16C13.06,16 12.7,16.13 12.42,16.43C12.14,16.73 12,17.08 12,17.5C12,17.89 12.14,18.24 12.42,18.54C12.7,18.84 13.06,19 13.5,19M3,13H11.11C9.7,11.64 9,10 9,8H3V13M4.5,19C4.94,19 5.3,18.84 5.58,18.54C5.86,18.24 6,17.89 6,17.5C6,17.08 5.86,16.73 5.58,16.43C5.3,16.13 4.94,16 4.5,16C4.06,16 3.7,16.13 3.42,16.43C3.14,16.73 3,17.08 3,17.5C3,17.89 3.14,18.24 3.42,18.54C3.7,18.84 4.06,19 4.5,19M16,1C17.92,1 19.58,1.67 20.95,3.05C22.33,4.42 23,6.08 23,8C23,9.77 22.44,11.29 21.28,12.59C20.13,13.88 18.7,14.66 17,14.91V18C17,18.84 16.67,19.58 16,20.2V22C16,22.27 15.89,22.5 15.7,22.71C15.5,22.91 15.28,23 15,23H14C13.73,23 13.5,22.91 13.29,22.71C13.09,22.5 13,22.27 13,22V21H5V22C5,22.27 4.91,22.5 4.71,22.71C4.5,22.91 4.27,23 4,23H3C2.72,23 2.5,22.91 2.3,22.71C2.11,22.5 2,22.27 2,22V20.2C1.33,19.58 1,18.84 1,18V8C1,6.42 1.67,5.35 3.05,4.8C4.42,4.26 6.41,4 9,4C9.13,4 9.33,4 9.61,4C9.89,4 10.09,4.03 10.22,4.03C11.63,2 13.55,1 16,1Z" />
                    </Canvas>
                </Viewbox>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Margin="0, 50, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="585*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="frmDisplay" Source="DisplayPages/BusesDisplayPage.xaml" Background="Transparent"
                   NavigationUIVisibility="Hidden" Margin="20" Grid.ColumnSpan="2" />
        </Grid>
        <Grid x:Name="grdClose" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Cursor="Hand"
              MouseLeftButtonDown="imgLogout_MouseLeftButtonDown" ToolTip="Logout"
              Background="Transparent" Margin="20">
            <Viewbox>
                <Canvas Width="24" Height="24">
                    <Path Fill="Black" Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z" />
                </Canvas>
                <Viewbox.Style>
                    <Style TargetType="Viewbox">
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Height" Value="20"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=grdClose, Path=IsMouseOver}" Value="True">
                                <Setter Property="Width" Value="30"/>
                                <Setter Property="Height" Value="30"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Viewbox.Style>
            </Viewbox>
        </Grid>
    </Grid>
</Window>